# Flask Environment
FLASK_ENV=development
DEBUG=True
TESTING=False

# Security Keys (REQUIRED - NO DEFAULTS!)
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hashquest
MONGODB_DATABASE=hashquest
TEST_MONGODB_URI=mongodb://localhost:27017/hashquest_test


# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000



# Game Configuration
MAX_TEAMS=20
MAX_WORD_GUESSES=3
GAME_WORD=RICARDIAN CONTRACT
TOTAL_PAGES=8

# Security Configuration
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=6
TEAM_CODE_LENGTH=6
ADMIN_TOKEN=admin-secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/hashquest.log

# Monitoring (Optional)
SENTRY_DSN=

# File Upload
UPLOAD_FOLDER=uploads



