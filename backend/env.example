# Flask Environment
FLASK_ENV=development
DEBUG=True
TESTING=False

# Security Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hashquest
MONGODB_DATABASE=hashquest
TEST_MONGODB_URI=mongodb://localhost:27017/hashquest_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATELIMIT_DEFAULT=1000 per hour

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@hashquest.com

# Game Configuration
MAX_TEAMS=20
MAX_WORD_GUESSES=3
GAME_WORD=RICARDIAN CONTRACT
TOTAL_PAGES=8

# Security Configuration
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=6
TEAM_CODE_LENGTH=6

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/hashquest.log

# Monitoring (Optional)
SENTRY_DSN=

# File Upload
UPLOAD_FOLDER=uploads



